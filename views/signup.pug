html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='/signup-style.css')
        title Document
    body
        .navbar
            a.app-name(href='/signup') X-Tracker
        .container
            .image
                img(src='/images/undraw_welcoming_re_x0qo.svg' alt='')
            .form
                form.signup-form
                    input(type='text' placeholder='NAME' id='name' required)
                    input(type='text' placeholder='test@example.com' id='email' required)
                    input(type='password' placeholder='Password' id='password' required)
                    input(type='password' placeholder='Confirm Password' id='confirm-password' required)
                    button.submit SIGN UP
script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.25.0/axios.min.js")
script(src="signup.js") 